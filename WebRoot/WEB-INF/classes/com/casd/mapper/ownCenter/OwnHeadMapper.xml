	<!-- 保存单头 -->
	<insert id="saveOwnHead" useGeneratedKeys="true" keyProperty="own_purchase_id"
		parameterType="com.casd.entity.ownCenter.OwnPurchaseHead">
		INSERT INTO own_purchase_head
